@page
@model petclinicFront.Pages.Duenos.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuenosGrid.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuenosGrid.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuenosGrid.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuenosGrid.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuenosGrid.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuenosGrid.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuenosGrid.Ciudad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuenosGrid.Ciudad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuenosGrid.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuenosGrid.Telefono)
        </dd>
    </dl>
</div>
<h4>Mascotas registradas</h4>
<hr/>
<p>
    <a asp-area="" asp-page="/Mascotas/Create" asp-route-duenoId="@Model.DuenosGrid.DuenoId">Registrar Mascota nueva</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Tipo de mascota
            </th>
            <th>
                Fecha de nacimiento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Mascotas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mascota1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo.Tipo1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DuenosGrid.DuenoId">Editar</a> |
    <a asp-page="./Index">Atrás</a>
</div>
