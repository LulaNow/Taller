@page
@model petclinicFront.Pages.Veterinarios.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Listado de veterinarios</h1>

<p>
    <a asp-page="Create">Crear nuevo veterinario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Veterinarios) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VeterinarioId">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.VeterinarioId">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.VeterinarioId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
